// üìÅ login.php

<?php
require "db.php";
$l = $_POST['login'];
$p = $_POST['pass'];
$r = $conn->query("SELECT * FROM users WHERE login='$l' AND pass='$p'");
echo $r->num_rows ? "Logged in" : "Wrong login";
?>

