// üìÅ register.php

<?php
require "db.php";
$l = $_POST['login'];
$p = $_POST['pass'];
$conn->query("INSERT INTO users (login, pass) VALUES ('$l', '$p')");
echo $conn->error ? "User exists" : "Registered";
?>

